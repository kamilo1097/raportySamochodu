@model ServiceCar.Models.Repairs

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Repairs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class ="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Kilometers" class="control-label"></label>
                <input asp-for="Kilometers" class="form-control" />
                <span asp-validation-for="Kilometers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhatFixed" class="control-label"></label>
                <input asp-for="WhatFixed" class="form-control" />
                <span asp-validation-for="WhatFixed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="text-danger">*Możesz dodać pozycję ubezpieczenia lub przeglądu <br />
                -- Wystarczy wpisać -- <p class="text-info">ubezpieczenie</p><p class="text-info">przegląd</p></div>
            </div>
            <div class="form-group">
                <label asp-for="WhenFixed" class="control-label"></label>
                <input asp-for="WhenFixed" class="form-control" />
                <span asp-validation-for="WhenFixed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
